{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "import/no-extraneous-dependencies": "off",
        "linebreak-style": "off",
        "react/jsx-filename-extension": "off",
        "react/react-in-jsx-scope": "off",
        "jsx-a11y/label-has-associated-control": "off"
    }
}
